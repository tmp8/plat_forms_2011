%h1 Search for a member
= simple_form_for(@user, :url => search_users_path, :html => {:method => :get}) do |f|
  .inputs
    = f.input :username
    =# f.input :startdate, :include_blank => true
    =# f.input :enddate, :include_blank => true
    =# f.association :categories, :collection => Category.for_select

  .actions
    = f.submit :submit
%p
- if !@empty_form
  %h2 Results
  - if @users.empty?
    %p.warn No results. Sorry :,(
  - else
    %ul.links
      = form_tag send_many_friendship_requests_path do |f|
        - for user in @users
          %li
            - if current_user && (current_user.friend_state(user) == User::NO_CONTACT)
              = check_box_tag "user[#{user.id}]", 1
            = link_to user_info(user), user
            = "from #{user.city}/#{user.country_code}"
        - if current_user
          = submit_tag "Send friendship Request"
